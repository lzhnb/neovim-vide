{
    "pright": {
        "enabled": true,
        "server": "/usr/bin/pyright-langserver",
        "organizeimports": {
            "provider": "pright"
        }
    },
    "python": {
        "pythonPath": "~/miniconda3/envs/py38/bin/python",
        "analysis": {
            "autoImportCompletions": false,
            "autoSearchPaths": false
        },
        "formatting": {
            "provider": "yapf",
            "yapfPath": "~/miniconda3/envs/py38/bin/yapf",
            "yapfArgs": [
                "--style",
                "{SPACES_AROUND_POWER_OPERATOR: True, SPACES_BEFORE_COMMENT: 1}"
            ]
        },
        "linting": {
            "enabled": false,
            "flake8Enabled": false
        }
    },
}

